<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/DetailToolbar</item>
    </style>

    <style name="DetailToolbar" parent="">
        <item name="colorPrimary">@color/detail_toolbar</item>
        <item name="colorPrimaryVariant">@color/detail_toolbar</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="LoginTitle">
        <item name="fontFamily">@font/hanken_book</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_text_color</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/pig_iron</item>
        <item name="android:textColorHint">@color/pig_iron</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="boxStrokeColor">@color/gray40</item>
        <item name="android:strokeColor">@color/gray40</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="RelaxTextView">
        <item name="fontFamily">@font/hanken_book</item>
    </style>

    <style name="MeditationsTitle" parent="RelaxTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MeditationsSubtitle" parent="RelaxTextView">
        <item name="android:textColor">@color/gray40</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BannerText" parent="MeditationsTitle" />

    <style name="DashboardTitle" parent="RelaxTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DetailTitle" parent="DashboardTitle" />

    <style name="DetailDescription" parent="RelaxTextView">
        <item name="android:textColor">@color/white80</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DetailDate" parent="RelaxTextView">
        <item name="android:textColor">@color/white70</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>